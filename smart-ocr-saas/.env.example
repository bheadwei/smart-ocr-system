# Smart OCR SaaS - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# OpenAI API
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate a secure random string for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# MongoDB (Optional - defaults work for Docker Compose)
# =============================================================================
# MONGODB_URL=mongodb://localhost:27017
# MONGODB_DB_NAME=ocr_saas

# =============================================================================
# MinIO (Optional - defaults work for Docker Compose)
# =============================================================================
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=ocr-uploads
# MINIO_SECURE=false

# =============================================================================
# Redis (Optional - defaults work for Docker Compose)
# =============================================================================
# REDIS_URL=redis://localhost:6379

# =============================================================================
# LDAP Configuration (Optional)
# =============================================================================
# LDAP_ENABLED=true
# LDAP_SERVER_URL=ldap://ldap.example.com:389
# LDAP_USE_SSL=false
# LDAP_BASE_DN=dc=example,dc=com
# LDAP_BIND_DN=cn=admin,dc=example,dc=com
# LDAP_BIND_PASSWORD=your-ldap-admin-password
# LDAP_USER_SEARCH_FILTER=(sAMAccountName={username})
# LDAP_USERNAME_ATTRIBUTE=sAMAccountName
# LDAP_DISPLAY_NAME_ATTRIBUTE=displayName
# LDAP_EMAIL_ATTRIBUTE=mail
